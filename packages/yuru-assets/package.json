{
  "name": "@yuru-web/yuru-assets",
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "dev": "svelte-kit sync && svelte-package --watch --input=src",
    "build": "svelte-kit sync && svelte-package --input=src"
  },
  "files": [
    "dist",
    "!dist/**/*.test.*",
    "!dist/**/*.spec.*",
    "src",
    "!src/**/*.test.*",
    "!src/**/*.spec.*"
  ],
  "sideEffects": [
    "**/*.css"
  ],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "svelte": "./dist/index.js"
    },
    "./assets/*": "./assets/*",
    "./i18n": "./dist/i18n/index.js"
  },
  "peerDependencies": {
    "svelte": "^5.0.0"
  },
  "devDependencies": {
    "@sveltejs/kit": "^2.25.1",
    "@sveltejs/package": "^2.4.0",
    "@sveltejs/vite-plugin-svelte": "^5.1.0",
    "svelte": "^5.36.12",
    "svelte-check": "^4.3.0",
    "typescript": "5.8.2",
    "vite": "^6.3.2"
  }
}
